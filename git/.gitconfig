[includeIf "gitdir:github/"]
  path = ~/.gitconfig-hub
[includeIf "gitdir:personal/"]
  path = ~/.gitconfig-lab

[core]
	editor = nvim
[mergetool "vimdiff"]
	path = nvim
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[init]
	defaultBranch = main
